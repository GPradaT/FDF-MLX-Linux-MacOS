#include "libft.h"

void	ft_putstr(char *str)
{
	int	i = 0;

	while (str[i])
		write(1, &str[i++], 1);
}

void	reading_map(int fd)
{
	char	**map;
	char	*line;
	int		i, j;

	i = 0;
	j = 0;
	while (line)
	{
		//		ft_printf("%s\n", line);
		line = get_next_line(fd);
		ft_putstr(line);
	}
}

int main()
{
	int fd = open("42.fdf", O_RDONLY);
	reading_map(fd);

	return (0);
}
